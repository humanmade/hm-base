{
	"private": true,
	"name": "hm-base",
	"version": "5.0.0",
	"description": "Base project for Human Made projects.",
	"author": "Human Made Limited",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"prebuild": "node .bin/clean-build.js",
		"build": "webpack --config .config/webpack-config-prod.js",
		"dev:theme": "BUILD_TARGET=theme webpack-dev-server --config .config/webpack-config-dev.js",
		"dev:blocks": "BUILD_TARGET=blocks webpack-dev-server --config .config/webpack-config-dev.js",
		"dev": "concurrently npm:dev:theme npm:dev:blocks",
		"lint:eslint": "eslint content/themes/hm-base-theme content/mu-plugins/blocks .config",
		"lint:eslint:fix": "eslint --fix content/themes/hm-base-theme content/mu-plugins/blocks .config",
		"lint:phpcs": "vendor/bin/phpcs --standard=./phpcs.ruleset.xml -p -s --extensions=php",
		"lint:phpcs:fix": "vendor/bin/phpcbf --standard=./phpcs.ruleset.xml --extensions=php",
		"lint": "npm run lint:eslint && npm run lint:phpcs",
		"lint:fix": "npm run lint:eslint:fix && npm run lint:phpcs:fix",
		"prestart": "node .bin/clean-build.js",
		"start": "npm run dev"
	},
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/plugin-proposal-async-generator-functions": "^7.1.0",
		"@babel/plugin-proposal-class-properties": "^7.1.0",
		"@babel/plugin-syntax-object-rest-spread": "^7.0.0",
		"@babel/plugin-transform-runtime": "^7.1.0",
		"@babel/preset-env": "^7.1.0",
		"@babel/preset-react": "^7.0.0",
		"@babel/runtime": "^7.1.2",
		"@wordpress/babel-plugin-makepot": "^2.1.2",
		"autoprefixer": "^9.2.1",
		"babel-cli": "^6.26.0",
		"babel-eslint": "^10.0.1",
		"babel-jest": "^23.6.0",
		"babel-loader": "^8.0.4",
		"babel-preset-react-app": "^5.0.4",
		"concurrently": "^4.0.1",
		"css-loader": "^1.0.0",
		"eslint": "^5.7.0",
		"eslint-config-humanmade": "^0.5.0",
		"eslint-config-react-app": "^3.0.4",
		"eslint-loader": "^2.1.1",
		"eslint-plugin-flowtype": "^3.0.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.2",
		"eslint-plugin-react": "^7.11.1",
		"file-loader": "^2.0.0",
		"hard-source-webpack-plugin": "^0.12.0",
		"mini-css-extract-plugin": "^0.4.4",
		"node-sass": "^4.9.4",
		"postcss-flexbugs-fixes": "^4.1.0",
		"postcss-loader": "^3.0.0",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"uglifyjs-webpack-plugin": "^2.0.1",
		"url-loader": "^1.1.2",
		"webpack": "^4.22.0",
		"webpack-bundle-analyzer": "^3.0.3",
		"webpack-cli": "^3.1.2",
		"webpack-dev-server": "^3.1.9",
		"webpack-hot-middleware": "^2.24.3",
		"webpack-manifest-plugin": "^2.0.4"
	}
}
